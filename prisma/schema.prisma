generator client {
  provider = "prisma-client-js"
  // engineType = "dataproxy"
}

datasource db {
  provider = "postgresql"
  url      = env("REAL_CON_STRING")
}

model posts {
  id       String @id @default(cuid())
  category String
  imageUrl String
  markdown String
  slug     String @unique
  title    String

  authorId String
  author User @relation(fields: [authorId], references: [id])

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}

model User {
  id             String @id
  username       String
  displayName    String
  profilePicture String

  comments comments[]
  posts   posts[]

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}

model comments {
  id String @id @default(cuid())

  parentPostId String

  content String
  userId  String  
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  CreatedAt DateTime @default(now())
  UpdatedAt DateTime @updatedAt
}